class Solution {
public:
    int findJudge(int n, vector<vector<int>>& trust) {
        vector<int> count(n + 1, 0);

        for (auto& t : trust) {
            int a = t[0];
            int b = t[1];
            count[a]--;  // a trusts someone
            count[b]++;  // b is trusted
        }

        for (int i = 1; i <= n; i++) {
            if (count[i] == n - 1)
                return i;  // found judge
        }

        return -1;  // no judge
    }
};
