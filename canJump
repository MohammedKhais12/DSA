class Solution {
public:
    bool canJump(vector<int>& nums) {
        int maxReach = 0;  // farthest index we can reach
        int n = nums.size();
        
        for (int i = 0; i < n; i++) {
            if (i > maxReach) {
                // if our current position is beyond what we can reach, weâ€™re stuck
                return false;
            }
            maxReach = max(maxReach, i + nums[i]);
            if (maxReach >= n - 1) {
                // if we can reach or go beyond the last index
                return true;
            }
        }
        return true;
    }
};
