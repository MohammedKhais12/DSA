/* Linked list node structure
struct Node
{
    int data;
    Node* next;

    Node(int x){
        data = x;
        next = NULL;
    }

};*/

/*The method multiplies
two  linked lists l1 and l2
and returns their product*/

/* Multiply contents of two linked lists */
class solution {
  public:
    long long multiplyTwoLists(Node *first, Node *second) {
        // code here
        const long long MOD = 1000000007;
        long long sum1 = 0;
        long long sum2 = 0;
        Node* temp1 = first;
        Node* temp2 = second;
        
        while(temp1!=NULL){
            sum1 *= 10;
            sum1 += temp1->data;
            temp1 = temp1->next;
        }
        while(temp2!=NULL){
            sum2 *= 10;
            sum2 += temp2->data;
            temp2 = temp2->next;
        }
        long long result = (sum1 * sum2)%MOD;
        return result;
    }
};
