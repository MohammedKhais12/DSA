class Solution {
  public:
    int firstNonRepeating(vector<int> &arr) {
        unordered_map<int, int> mp;

        // Step 1: Count frequency
        for(int num : arr) {
            mp[num]++;
        }

        // Step 2: Check in original order
        for(int num : arr) {
            if(mp[num] == 1) {
                return num;
            }
        }

        return 0; // If no non-repeating element
    }
};
