class Solution {
public:
    ListNode* deleteDuplicates(ListNode* head) {
        ListNode* temp = head;

        while (temp != NULL && temp->next != NULL) {
            if (temp->val == temp->next->val) {
                // store duplicate node
                ListNode* duplicate = temp->next;

                // bypass it
                temp->next = temp->next->next;

                // delete duplicate
                delete duplicate;
            } else {
                temp = temp->next;
            }
        }

        return head;
    }
};
