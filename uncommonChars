class Solution {
  public:
    string uncommonChars(string& s1, string& s2) {
        // code here
        int first = -1;
        int second = -1;
        string str = "";
        for(char i = 'a'; i<='z'; i++){
            first = s1.find(i);
            second = s2.find(i);
            if(first==-1&&second!=-1 || first!=-1&&second==-1){
                str += i;
            }
        }
        return str;
    }
};
