class Solution {
public:
    int stockBuySell(vector<int> &arr) {
        int n = arr.size();
        if (n < 2) return 0;

        int totalProfit = 0;

        for (int i = 1; i < n; i++) {
            if (arr[i] > arr[i - 1]) {
                totalProfit += arr[i] - arr[i - 1];
            }
        }

        return totalProfit;
    }
};
