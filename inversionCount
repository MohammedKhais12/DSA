class Solution {
  public:
    int inversionCount(vector<int> &arr) {
        // Code Here
        int count = 0;
        for(int i=0; i<arr.size()-1; i++){
            int j = arr.size()-1;
            while(i<j){
                if(arr[i]>arr[j]){
                    count++;
                }
                j--;
            }
        }
        return count;
    }
};
