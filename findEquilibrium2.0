class Solution {
  public:
    int findEquilibrium(vector<int> &arr) {
        // code here
        int leftSum = 0;
        int rightSum = accumulate(arr.begin(), arr.end(), 0);
        
        for(int i=0; i<arr.size(); i++){
            rightSum -= arr[i];
            if(leftSum == rightSum){
                return i;
            }
            
                leftSum += arr[i];
        }
        return -1;
    }
};
