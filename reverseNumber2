class Solution {
public:
    int reverse(int x) {
        int val = 0;
        int n = x;
        int k;

        // single digit case
        if (x > -10 && x < 10) {
            return x;
        }

        while (n != 0) {
            k = n % 10;

            // overflow check
            if (val > INT_MAX / 10 || val < INT_MIN / 10)
                return 0;

            val = val * 10 + k;
            n /= 10;
        }

        return val;
    }
};
