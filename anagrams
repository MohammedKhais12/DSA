class Solution {
  public:
    bool areAnagrams(string& s1, string& s2) {
        // code here
        vector<int> freq(26, 0);
        
        if(s1.size()!=s2.size()) return false;
        
        for(char c : s1){
            freq[c-'a']++;
        }
        for(char c : s2){
            freq[c-'a']--;
        }
        
        for(int i =0; i<freq.size(); i++){
            if(freq[i]!=0){
                return false;
            }
        }
        return true;
    }
};
