class Solution {
public:
    int findEquilibrium(vector<int> &arr) {
        
        int rightSum = accumulate(arr.begin(), arr.end(), 0);
        int leftSum = 0;

        for(int i = 0; i < arr.size(); i++){
            
            rightSum -= arr[i];   // remove current element
            
            if(leftSum == rightSum){
                return i;
            }

            leftSum += arr[i];    // add to left side
        }

        return -1;
    }
};
