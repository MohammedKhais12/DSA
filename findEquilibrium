class Solution {
  public:
    // Function to find equilibrium point in the array.
    int findEquilibrium(vector<int> &arr) {
        // code here
        int rSum = 0;
        int lSum = 0;
        
        for(int i =0; i<arr.size(); i++){
            rSum += arr[i];
        }
        for(int i=0; i<arr.size(); i++){
            rSum -= arr[i];  // now totalSum is right sum
            
            if (lSum == rSum)
                return i;  // equilibrium index found
            
            lSum += arr[i];
            
        }
        return -1;
    }
};
