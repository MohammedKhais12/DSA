class Solution {
public:
    string reverse(const string& S) {
        stack<char> st;
        string str = "";

        // Push all characters into stack
        for (int i = 0; i < S.size(); i++) {
            st.push(S[i]);
        }

        // Pop characters to build reversed string
        while (!st.empty()) {
            str += st.top();
            st.pop();
        }

        return str;
    }
};
