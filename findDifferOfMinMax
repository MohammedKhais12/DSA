class Solution {
  public:
    // Function to find the difference between the maximum and minimum frequency of elements.
    int findDiff(vector<int>& arr) {
        unordered_map<int, int> freq;

        // Step 1: Count frequency of each element
        for (int num : arr) {
            freq[num]++;
        }

        // Step 2: If only one unique element, difference = 0
        if (freq.size() == 1)
            return 0;

        // Step 3: Find max and min frequency
        int maxFreq = INT_MIN;
        int minFreq = INT_MAX;

        for (auto &p : freq) {
            maxFreq = max(maxFreq, p.second);
            minFreq = min(minFreq, p.second);
        }

        // Step 4: Return the difference
        return maxFreq - minFreq;
    }
};
