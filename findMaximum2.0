// User function template for C++
class Solution {
  public:
    int findMaximum(vector<int> &arr) {
        // code here
        int k = arr[0] ;
        for(int i=0; i<arr.size()-1; i++){
            if(arr[i]<arr[i+1]){
                k = arr[i+1];
            }
            else{
                return k;
            }
        }
        return k;
    }
};
