class Solution {
  public:
    vector<int> maxOfSubarrays(vector<int>& arr, int k) {
        // code here
        vector <int> vec;
        
        
        for(int i=0; i<arr.size()-k+1; i++){
            int max = INT_MIN;
            for(int j =i; j<i+k; j++){
                if(arr[j]>max){
                    max = arr[j];
                }
            }
            vec.push_back(max);
        }
        return vec;
    }
};
